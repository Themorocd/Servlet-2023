<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServletLogin</servlet-name>
        <servlet-class>controlador.ServletLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletVentas</servlet-name>
        <servlet-class>controlador.ServletVentas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletProducto</servlet-name>
        <servlet-class>controlador.ServletProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Modiproducto</servlet-name>
        <servlet-class>controlador.Modiproducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletComerciales</servlet-name>
        <servlet-class>controlador.ServletComerciales</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletLogin</servlet-name>
        <url-pattern>/ServletLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletVentas</servlet-name>
        <url-pattern>/ServletVentas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletProducto</servlet-name>
        <url-pattern>/ServletProducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Modiproducto</servlet-name>
        <url-pattern>/Modiproducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletComerciales</servlet-name>
        <url-pattern>/ServletComerciales</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
